



<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
* {
  box-sizing: border-box;
}

.menu {
  float: left;
  width: 20%;
  text-align: center;
}

.menu a {
  background-color: #FFEFD5 ;
  padding: 8px;
  margin-top: 7px;
  display: block;
  width: 100%;
  color: black;
}

.main {
  float: left;
  width: 60%;
  padding: 0 20px;
  height: 200px;
  background-color: #FFFFF;
}

.right {
  background-color: #e5e5e5;
  float: left;
  width: 20%;
  padding: 15px;
  margin-top: 7px;
  text-align: center;
}


@media only screen and (max-width: 620px) {
  /* For mobile phones: */
  .menu, .main, .right {
    width: 100%;
  }
}
</style>
</head>
<body style="font-family:Verdana;color:#black;">

<div style="background-color:#e5e5e5;padding:15px;text-align:center;">
<h1>My Blog</h1>

</div>

<div style="overflow:auto">
  <div class="menu">
  <%= link_to "New Article", new_article_path %>
  
    <a href="iletisim">Contact</a>
  </div>

  <div class="main">
  <ul>
  <h2>Articles</h2>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>
  </div>
</div>

<div style="background-color:#FFEFD5;text-align:center;padding:10px;margin-top:7px;">© copyright Bahadır Aşık</div>

</body>
</html>